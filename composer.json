{
    "name": "thepublicgood/is-presentable",
    "description": "Simple Laravel model presenter trait",
    "keywords": ["presenter", "presentation", "laravel"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/tpg/is-presentable/issues",
        "source": "https://github.com/tpg/is-presentable"
    },
    "authors": [
        {
            "name": "THEPUBLICGOOD",
            "email": "makers@thepublicgood.co.za"
        }
    ],
    "autoload": {
        "psr-4": {
            "TPG\\IsPresentable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TPG\\IsPresentable\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "orchestra/testbench" : "^7.6|^8.0",
        "phpunit/phpunit" : "^9.3",
        "pestphp/pest": "^1.23",
        "pestphp/pest-plugin-laravel": "^1.4",
        "laravel/pint": "^1.10"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "TPG\\IsPresentable\\IsPresentableServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
